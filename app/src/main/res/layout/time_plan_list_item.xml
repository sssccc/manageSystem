<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_centerVertical="true"
        android:layout_width="2dp"
        android:layout_height="40dp"
        android:id="@+id/time_plan_item_line"
        android:background="#ff0000"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"/>

    <TextView
        android:textSize="20sp"
        android:textColor="#333333"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time_plan_item_time"
        android:text="1,2"
        android:layout_toRightOf="@id/time_plan_item_line"
        android:layout_marginLeft="10dp" />

    <TextView
        android:textSize="20sp"
        android:textColor="#333333"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time_plan_item_title"
        android:text="课程设计"
        android:layout_toRightOf="@id/time_plan_item_time"
        android:layout_marginLeft="20dp" />

    <TextView
        android:textSize="15sp"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="#5fbbb0"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time_plan_item_type"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"

        android:text="项目"/>

</RelativeLayout>


