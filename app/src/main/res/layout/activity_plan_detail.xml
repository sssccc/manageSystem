<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.PlanDetailActivity">


    <View
        android:id="@+id/plan_detail_blank_view"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
    </View>

    <ScrollView
        android:background="#55c9c7c7"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="界面设计"
                android:textSize="20sp"
                android:textColor="#fff"
                android:padding="10dp"
                android:id="@+id/plan_detail_title"
                android:background="#555fbbb0"/>
            <TableLayout

                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">
                <TableRow
                    android:layout_margin="5dp">
                    <TextView
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="时间： "/>
                    <TextView
                        android:textSize="20sp"
                        android:id="@+id/plan_detail_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="周三 1,2节"/>
                </TableRow>

                <TableRow
                    android:layout_margin="5dp">
                    <TextView
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="描述： "/>
                    <TextView
                        android:textSize="20sp"
                        android:id="@+id/plan_detail_describe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="要完成头像修改的界面设计"/>
                </TableRow>

                <TableRow
                    android:layout_margin="5dp">
                    <TextView
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="周期： "/>
                    <TextView
                        android:textSize="20sp"
                        android:id="@+id/plan_detail_isFixed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="每周"/>
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
                <Button
                    android:background="@drawable/btn_click"
                    android:id="@+id/plan_detail_update_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="修改"
                    android:layout_marginRight="25dp"/>
                <Button
                    android:background="@drawable/btn_click_un"
                    android:layout_marginLeft="25dp"
                    android:id="@+id/plan_detail_cancel_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取消"/>
            </LinearLayout>
        </LinearLayout>


    </ScrollView>

</LinearLayout>

