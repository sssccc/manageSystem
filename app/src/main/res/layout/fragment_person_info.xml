<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:background="#5fbbb0"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:gravity="center">
        <demo.yc.formalmanagersystem.view.CircleImageView
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/info_head"
            android:src="#fff"/>

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:background="#5fbbb0"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4">

        <ImageView
            android:id="@+id/info_sex"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/boy"/>
        <TextView
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="何永财"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="#ffffff"
            android:id="@+id/info_name"/>
        <TextView
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20岁"
            android:textColor="#ffffff"
            android:id="@+id/info_age"/>

    </LinearLayout>

    <!--//在校信息-->
    <ScrollView
        android:layout_weight="3.5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableLayout
                android:layout_gravity="center"
                android:layout_weight="8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingTop="30dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:orientation="vertical">
                <!--//学号-->
                <TableRow
                    android:layout_margin="1dp"
                    android:orientation="horizontal">
                    <TextView
                        android:textColor="#ffffff"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:background="#5fbbb0"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="号"/>
                    <TextView
                        android:layout_margin="5dp"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="学号 :"/>
                    <TextView
                        android:id="@+id/info_number"
                        android:layout_margin="5dp"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="111111123444"/>
                </TableRow>
                <!--//学院-->
                <TableRow
                    android:layout_margin="1dp"
                    android:orientation="horizontal">
                    <TextView
                        android:textColor="#ffffff"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:background="#5fbbb0"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="院"/>
                    <TextView
                        android:layout_margin="5dp"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="学院 :"/>
                    <TextView
                        android:id="@+id/info_institute"
                        android:layout_margin="5dp"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="数学与信息学院"/>
                </TableRow>
                <!--//专业-->
                <TableRow
                    android:layout_margin="1dp"
                    android:orientation="horizontal">
                    <TextView
                        android:textColor="#ffffff"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:background="#5fbbb0"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="业"/>
                    <TextView
                        android:layout_margin="5dp"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="专业 :"/>
                    <TextView
                        android:id="@+id/info_major"
                        android:layout_margin="5dp"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="软件工程"/>
                </TableRow>
                <!--//班级-->
                <TableRow
                    android:layout_margin="1dp"
                    android:orientation="horizontal">
                    <TextView
                        android:textColor="#ffffff"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:background="#5fbbb0"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="班"/>
                    <TextView
                        android:layout_margin="5dp"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text= "班级 :"/>

                    <TextView
                        android:id="@+id/info_class"
                        android:layout_margin="5dp"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2班"/>
                </TableRow>
                <!--//岗位-->
                <TableRow
                    android:layout_margin="1dp"
                    android:orientation="horizontal">
                    <TextView
                        android:textColor="#ffffff"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:background="#5fbbb0"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="岗"/>
                    <TextView
                        android:layout_margin="5dp"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="岗位 :"/>
                    <TextView
                        android:id="@+id/info_position"
                        android:layout_margin="5dp"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Android"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_gravity="bottom|center"
        android:id="@+id/info_update_Btn"
        android:textColor="#ffffff"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:background="@drawable/btn_click"
        android:text="编 辑"
        android:textSize="20sp"
        android:layout_margin="5dp"/>

    </LinearLayout>

