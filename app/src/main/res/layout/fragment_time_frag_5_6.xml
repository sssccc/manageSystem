<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#cccbcb">

    <LinearLayout
        android:id="@+id/layout_5_6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="1dp">
        <TextView
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:text="第5, 6节课"
            android:textSize="15sp"
            android:gravity="center"
            android:background="#ffd56a"/>
        <TextView
            android:id="@+id/layout_5_6_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="无聊"
            android:textSize="20sp"
            android:gravity="center"
            android:background="#ffffff"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccbcb"/>
        <LinearLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.8">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:layout_marginRight="2dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/signal"/>
                <TextView
                    android:id="@+id/layout_5_6_type"
                    android:layout_marginLeft="5dp"
                    android:textColor="#e9c973"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="私人"/>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#cccbcb"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:layout_marginRight="2dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/image1"
                    android:src="@drawable/refresh4"/>
                <TextView
                    android:layout_marginLeft="2dp"
                    android:textColor="#79d78c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_5_6_isFixed"
                    android:text="今日"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
