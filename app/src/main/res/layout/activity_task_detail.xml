<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="demo.yc.formalmanagersystem.activity.TaskDetailActivity">

    <RelativeLayout
        android:background="#5fbbb0"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="任务详情"/>
        <ImageView

            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:id="@+id/task_detail_back_btn"
            android:src="@drawable/back"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#55aadada"/>
    <TextView
        android:background="#5fbbb0"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/task_detail_title"
        android:textSize="18sp"
        android:textColor="#fff"
        android:gravity="center"
        android:text="界面设计"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#55e2e2e2"/>


    <ScrollView
        android:id="@+id/task_detail_scrollView"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--发布人信息-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#fff"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <demo.yc.formalmanagersystem.view.CircleImageView
                    android:src="@drawable/person"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/task_detail_administor_head"/>
                <RelativeLayout
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发布人："
                        android:textSize="15sp"
                        android:textColor="#000"
                        android:id="@+id/name_tag" />
                    <TextView
                        android:textSize="15sp"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/task_detail_administor_name"
                        android:layout_toRightOf="@id/name_tag"/>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/task_detail_time"
                        android:textColor="#888"
                        android:textSize="13sp"
                        android:layout_below="@id/name_tag" />
                </RelativeLayout>

            </LinearLayout>

            <!--图片资源-->
            <LinearLayout
                android:id="@+id/task_detail_image_layout"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#aaaaaa">
                <FrameLayout
                    android:background="#ffffff"
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_margin="5dp"
                        android:id="@+id/task_detail_image_btn"
                        android:alpha="0.4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:text="图片/0"/>

                    <ImageView
                        android:src="@drawable/none"
                        android:id="@+id/task_detail_images"
                        android:layout_width="match_parent"
                        android:layout_height="250dp" />
                </FrameLayout>

            </LinearLayout>

            <!--任务分类-->
            <LinearLayout
                android:background="#aae2e2e2"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:textColor="#888"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="所属分类"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:id="@+id/task_detail_cate_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"
                        android:text="android"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:textColor="#888"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="所属项目组"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:id="@+id/task_detail_group_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"
                        android:text="人员管理系统"/>
                </LinearLayout>

            </LinearLayout>

            <!--//任务描述-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="#fff">
                <TextView
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="描述"/>
                <TextView
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="50dp"
                    android:textSize="15sp"
                    android:textColor="#555"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/task_detail_describe"
                    android:text="修改头像，设计界面，存储图片，上传图片修改头像，设计界面，存储图片，上传图片,修改头像，设计界面，存储图片，上传图片,修改头像，设计界面，存储图片，上传图片,修改头像，设计界面，存储图片，上传图片,修改头像，设计界面，存储图片，上传图片"/>
            </LinearLayout>

            <!--进度记录-->

            <LinearLayout
                android:id="@+id/task_detail_progress_layout"
                android:background="#aae2e2e2"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/note"
                    android:layout_marginLeft="30dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:text="项目进度"/>
            </LinearLayout>

            <demo.yc.formalmanagersystem.view.MyHeightListView
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/task_detail_progress_listView"/>

        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/task_detail_btn_layout"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <FrameLayout
            android:id="@+id/task_detail_bottom_oper_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/task_detail_bottom_text_btn"
                android:paddingLeft="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/detail_bottom_back"/>
            <LinearLayout

                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/task_detail_quit_btn"
                    android:textColor="#000"
                    android:background="@drawable/btn_click_un"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="放弃"
                    android:layout_marginRight="40dp"
                    />
                <Button
                    android:id="@+id/task_detail_involve_btn"
                    android:textColor="#fff"
                    android:background="@drawable/btn_click"
                    android:layout_marginLeft="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="参与"/>
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/task_detail_bottom_text_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/task_detail_bottom_oper_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/detail_bottom_cycle"
                android:paddingLeft="10dp"/>
            <EditText
                android:paddingLeft="10dp"
                android:hint="说说你的进度"
                android:background="@null"
                android:id="@+id/task_detail_bottom_edit"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/task_detail_bottom_send_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/detail_bottom_send"
                android:paddingLeft="10dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
