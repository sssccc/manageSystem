<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <GridView
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="#f2efef"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/select_photo_gridView"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:listSelector="#33aaaaaa"
        android:cacheColorHint="@android:color/transparent">
    </GridView>

    <RelativeLayout
        android:id="@+id/select_photo_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#5fbbb0"

        android:clipChildren="true">
        <TextView
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="#fff"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:id="@+id/select_photo_fileName"
            android:text="所有图片" />
        <TextView
            android:textColor="#fff"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/select_photo_fileCount"
            android:paddingRight="10dp"
            android:text="0" />
    </RelativeLayout>
</LinearLayout>
