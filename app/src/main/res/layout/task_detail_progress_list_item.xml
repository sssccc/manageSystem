<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:id="@+id/task_detail_list_item_point"
            android:background="#ff0000" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6">
        <TextView
            android:maxLength="20"
            android:maxLines="1"
            android:textColor="#333333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/task_detail_list_item_title"
            android:text="完成界ddddddddddddddddddddddddddd面布局，并dddddddddddddddddddd实现"
            />
    </LinearLayout>
    <LinearLayout
        android:gravity="center|center_vertical"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <TextView
            android:gravity="center"
            android:text="544444"
            android:maxLength="5"
            android:textSize="10sp"
            android:textColor="#333333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/task_detail_list_item_name"
            android:layout_margin="1dp" />
        <TextView
            android:gravity="center"
            android:text="16-01-01fffffffff"
            android:maxLength="8"
            android:textSize="10sp"
            android:textColor="#333333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/task_detail_list_item_time"
            android:layout_margin="1dp" />
    </LinearLayout>
</LinearLayout>


